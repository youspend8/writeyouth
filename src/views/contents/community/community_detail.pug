extends ../../base
include ../../mixins/community/cardItem

block content
    main#contents
        .__spy
        .__container.__community_detail.__community
            .__user
                .__profile
                    img(src="/uploads/about/writing.png", alt="")
                p.__username
                span.__created_at

            .swiper
                .swiper-wrapper
                .swiper-pagination
                .swiper-button-prev
                .swiper-button-next

            p.__text

            .__emotions
                .__emotion.good
                    label.__description(data-type="good") 😄
                    label.__label 좋아요
                    label.__count 0
                .__emotion.cheer
                    label.__description(data-type="cheer") 🤗
                    label.__label 응원해요
                    label.__count 0
                .__emotion.moved
                    label.__description(data-type="moved") 🥹
                    label.__label 감동이에요
                    label.__count 0
                .__emotion.sad
                    label.__description(data-type="sad") 😭
                    label.__label 슬퍼요
                    label.__count 0
